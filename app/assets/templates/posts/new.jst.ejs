<form name="post-form-new" action="/posts/new" method="POST">

  <input class="title" 
    type="text" id="post-title" 
    name="post[title]" 
    placeholder="Enter a title..."><br>

  <input class="subtitle"
    type="text" id="post-subtitle"
    name="post[subtitle]"
    placeholder="Enter a subtitle"><br>

  <textarea class="content"
    rows="30" cols="100" id="post-body"
    name="post[body]" placeholder="Content goes here."></textarea>
  <br>

  <label for="post-collection">Choose a collection. Display on click of publish.</label>
  <select id="post-collection" name="post[collection_id]">
    <option value="">No Collection</option>
    <% Mediumlarge.collections.forEach(function(collection){ %>
      <option value="<%= collection.id %>">
        <%= collection.escape('name') %>
      </option>
    <% }); %>
  </select><br>

  <button class="btn btn-default" id="draft">Save as Draft.</button>
  <button class="btn btn-success" id="publish">Publish post.</button>
</form>