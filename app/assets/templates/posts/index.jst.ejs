<h1>Posts</h1>

<h2>Recommendations:</h2>
<ul>
    <% Mediumlarge.recommendations.forEach(function(recommendation){  %>
      <% var rPost = posts.get(recommendation); %>
      <img src="<%= rPost.get('author').profile_image %>">
      <a href="/#/post/<%= rPost.id %>">
        <b><%= rPost.escape('title') %></b>
        <em><%= rPost.escape('subtitle') %></em>
      </a>
      by <a href="#"><%= rPost.get('author').name %></a>
    <% }); %>
</ul>

<h2>Latest:</h2>
<ul>

<% for(var i=0; i < 5; i++) { %>
    <% var post_id = Mediumlarge.latestPosts[i] %>
    <% var post = posts.get(post_id) %>

    <li>
      <img src="<%= post.get('author').profile_image %>">
      <a href="/#/post/<%= post.id %>">
        <b><%= post.escape('title') %></b>
        <em><%= post.escape('subtitle') %></em>
      </a>
      by <a href="#"><%= post.get('author').name %></a>
    </li>
<% } %>
</ul>